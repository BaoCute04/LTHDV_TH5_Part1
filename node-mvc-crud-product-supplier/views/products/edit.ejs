<%- include("../partials/header", { title: "Edit Product" }) %>

    <h2 class="mb-3">Edit Product</h2>

    <form action="/products/<%= product._id %>?_method=PUT" method="POST" class="card p-4 shadow-sm">
        <div class="mb-3">
            <label for="name" class="form-label">Product Name</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= product.name %>" required>
        </div>

        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input type="number" class="form-control" id="price" name="price" value="<%= product.price %>" required>
        </div>

        <div class="mb-3">
            <label for="supplier" class="form-label">Supplier</label>
            <select id="supplier" name="supplier" class="form-select">
      <% suppliers.forEach(supplier => { %>
        <option value="<%= supplier._id %>" <%= product.supplier && product.supplier.equals(supplier._id) ? "selected" : "" %>>
          <%= supplier.name %>
        </option>
      <% }) %>
    </select>
        </div>

        <button type="submit" class="btn btn-success">Update</button>
        <a href="/products" class="btn btn-secondary">Cancel</a>
    </form>

    <%- include("../partials/footer") %>